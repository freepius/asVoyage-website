<div id="comment-{{ id }}" vocab="http://schema.org/" typeof="Comment">

    <header>
        <time property="datePublished" datetime="{{ comment.datetime }}">
            <strong>{{ comment.datetime | localizeddate('medium', 'none') }} </strong><br>
            <em>    {{ comment.datetime | localizeddate('none'  , 'short') }}</em>
        </time>

        {% if is_granted('ROLE_ADMIN') %}
        <div class="actions">

            <!-- Update the comment -->
            <a href="{{ url_comment }}#post-comment" title="{{ 'Update'|trans }}">
                <i class="fa fa-pencil"></i></a>

            <!-- Delete the comment -->
            <form action="{{ url_comment }}" method="post">
                <input type="hidden" name="_method" value="DELETE">

                <button class="comment-delete btn-link" type="submit" title="{{ 'Delete'|trans }}">
                    <i class="fa fa-trash-o"></i>
                </button>
            </form>

        </div>
        {% endif %}
    </header>

    <blockquote property="text">
        <small>
            #{{ id }}&nbsp;
            {{ 'Posted by'|trans }}
            <b property="author">{{ comment.name }}</b>
        </small>

        {{ comment.text | nl2br | autolink }}
    </blockquote>

</div>
