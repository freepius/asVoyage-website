{% set currentNav = 'blog' %}

{% extends "layout.html.twig" %}

{% from "macros.twig" import bool2icon %}


{% block stylesheets %}

    <style>
        #dashboard { font-size: 0.8em; }
    </style>

    {# DEBUG mode => local files #}
    {% if app.debug %}
        <link href="/vendor/datatable/jquery.dataTables.min.css" rel="stylesheet">
    {% else %}
    {# Else => files from CDNs #}
        <link href="//cdn.datatables.net/1.10.3/css/jquery.dataTables.min.css" rel="stylesheet">
    {% endif %}

{% endblock %}


{% block javascripts %}

    {# DEBUG mode => local files #}
    {% if app.debug %}
        <script src="/vendor/datatable/jquery.dataTables.min.js"></script>
    {% else %}
    {# Else => files from CDNs #}
        <script src="//cdn.datatables.net/1.10.3/js/jquery.dataTables.min.js"></script>
    {% endif %}

    <script>
        $(document).ready(function() {
            $('#dashboard').DataTable({
                "columnDefs": [{
                    "targets": 8, "searchable": false, "orderable": false
                }],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/a5734b29083/i18n/
                           {{- app.locale == 'fr' ? 'French' : 'English' -}}
                           .json"
                }
            });
        });
    </script>

{% endblock %}


{% block main %}

    <header class="clearfix">
        <!-- Breadcrumb + title -->
        <div class="pull-left">
            <nav><a href="/blog">{{ 'blog.home'|trans }}</a> Â»</nav>

            <h1 id="page-title">{{ 'blog.dashboard'|trans }}</h1>
        </div>

        <!-- Create an article -->
        <a href="/blog/create" class="btn btn-success pull-right">
            <i class="fa fa-plus-circle fa-inverse"></i> {{ 'blog.create'|trans }}
        </a>
    </header>

    <!-- List of all blog articles -->
    <table id="dashboard" class="display compact" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>{{ 'blog.field.title'|trans }}</th>
                <th>{{ 'blog.field.slug'|trans }}</th>
                <th>{{ 'blog.field.pubDatetime'|trans }}</th>
                <th>{{ 'blog.field.isPublished'|trans }}</th>
                <th>{{ 'blog.field.beCommented'|trans }}</th>
                <th>{{ 'blog.field.countComments'|trans }}</th>
                <th>{{ 'blog.field.dateLastComment'|trans }}</th>
                <th>{{ 'blog.field.tags'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>

        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>{{ article.slug }}</td>
                    <td>{{ article.pubDatetime }}</td>
                    <td>{{ bool2icon(article.isPublished) }}</td>
                    <td>{{ bool2icon(article.beCommented) }}</td>
                    <td>{{ article.countComments }}</td>
                    <td>
                        {% if  (article.comments is not empty)
                           and (article.comments.0 is not null)
                        %}
                            {{ article.comments.0.datetime }}
                        {% endif %}
                    </td>
                    <td>{{ article.tags|join(', ') }}</td>

                    <!-- Actions on article -->
                    <td>
                        <!-- Read -->
                        <a href="/blog/{{- article.slug -}}/read" title="{{ 'Read'|trans }}">
                            <i class="fa fa-eye"></i></a>

                        <!-- Update -->
                        <a href="/blog/{{- article.slug -}}/update" title="{{ 'Update'|trans }}">
                            <i class="fa fa-pencil"></i></a>

                        <!-- Delete -->
                        <a href="/blog/{{- article.slug -}}/delete" title="{{ 'Delete'|trans }}">
                            <i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
