{% set tab, isCreation = 'comments', false %}

{% extends "article/post.html.twig" %}


{# Ask confirmation before delete a comment ! #}
{% block javascripts %}
    {% if is_granted('ROLE_ADMIN') %}

        <script type="text/javascript">
            $(document).ready(function () {
                $('.comment-delete').click(function () {
                    return confirm("{{ 'comment.deleting.confirm'|trans }}");
                });
            });
        </script>

    {% endif %}
{% endblock %}


{% block post %}
    {% include 'comment/list.html.twig'
        with {url_prefix: '/blog/'~article.slug~'/comments'}
    %}
{% endblock %}
