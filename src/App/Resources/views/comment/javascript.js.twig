$(document).ready(function () {

{# Ask confirmation before delete a comment #}
{% if is_granted('ROLE_ADMIN') %}

    $('.comment-delete').click(function () {
        return confirm("{{ 'comment.deleting.confirm'|trans }}");
    });

{% endif %}

{# Possibility to change the captcha #}
{% if comment.entity.captcha is defined %}

    $('#captcha-change').click(function () {

        var $img = $('#captcha-img');

        $img.attr('src', '/images/ajax-loader.gif');

        $.ajax({
            method  : 'GET',
            url     : '/blog/captcha-change',
            success : function (data) {
                $img.attr('src', data);
            }
        });

    });

{% endif %}

});
