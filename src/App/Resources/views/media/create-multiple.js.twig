<!-- The tempates for an element : being uploaded ; ready to validate -->
{% include 'media/tmpl-upload.js.twig' only %}
{% include 'media/tmpl-validate.js.twig' only %}

{{ js('jquery.fileupload') }}

<script src="/js/app-media-fileupload.js"></script>

<script>
    $(document).ready(function () {

        $('#fileupload').fileupload({
            acceptFileTypes  : {{ acceptFileTypes }}, // regexp
            autoUpload       : true,
            filesContainer   : $('#media'),
            maxFileSize      : {{ maxFileSize }},     // bytes
            previewMaxHeight : {{ previewSize }},     // px
            previewMaxWidth  : {{ previewSize }},     // px
            url              : '/media/upload'
        });
    });
</script>
