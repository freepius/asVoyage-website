{% set currentNav = 'map' %}

{% extends "layout.html.twig" %}

{% import "carto.twig" as carto %}


{% block stylesheets %}
    {{ carto.cssFull() }}

    <style>
        #map
        {
            width: 100%;
            height: 600px;
            margin-left: auto;
            margin-right: auto;
            border-radius: 10px;
        }
    </style>
{% endblock %}


{% block javascripts %}
    {{ carto.jsFull() }}
    <script src="{{ register_entries_js }}"></script>
    <script src="/js/app-base-map.js"></script>
{% endblock %}


{% block main %}
    <h1 id="page-title">{{ 'map.home'|trans }}</h1>

    <div id="map"></div>
{% endblock %}
