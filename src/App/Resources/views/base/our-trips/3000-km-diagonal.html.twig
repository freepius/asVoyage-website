{% block javascripts %}
    {{ carto.jsFiles() }}

    <script>
        {% include "base/our-trips/3000-km-diagonal.carto.js" %}

        $(document).ready(function() {

            var map = $.carto.addMap('map'),
                downLoire = L.polyline(downLoire_points, {color: 'blue'}).bindPopup('Descente de Loire'),
                longWalk  = L.polyline(longWalk_points,  {color: 'green'}).bindPopup('Grande marche'),
                group     = L.featureGroup([downLoire, longWalk]);

            group.setStyle({weight: 10}).addTo(map);

            map.fitBounds(group.getBounds());
        });
    </script>
